{
  "mappings": [
    {
      "request": {
        "method": "POST",
        "url": "/todos"
      },
      "response": {
        "status": 200,
        "bodyFileName": "responses/postTodo.json",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "url": "/todos"
      },
      "response": {
        "status": 200,
        "bodyFileName": "responses/getTodos.json",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPattern": "/todos/.*"
      },
      "response": {
        "status": 200,
        "bodyFileName": "responses/getTodo.json",
        "headers": {
          "Content-Type": "application/json"
        },
        "transformers": ["response-template"]
      }
    }
  ]
}